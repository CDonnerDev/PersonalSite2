
@{
    ViewData["Title"] = "Email Confirmation";
}

@model PersonalSite.UI.MVC.Models.ContactViewModel


<main>
    <section class="contact" data-aos="fade-up" data-aos-easing="ease-in-out" data-aos-duration="500">
        <div class="container">

            <div class="row">

                <div class="section-title">
                    <h2>Email Confirmation View</h2>
                    
                </div>

            </div>

            <div class="row">

                <div class="col-lg-12">

                    <div class="info-box">
                        <i class="bx bx-check-circle"></i>
                        <br />
                        <br />
                        <h3>Message Sent!</h3>
                        <p>
                            @* When referencing to a SPECIFIC Object that fits the model (like cvm
                            object in the controller), use a capital M -- "Model"
                            *@
                            Thank you for contacting us! A member of our team will respond to
                            your message using the provided email address, @Model.Email, in
                            the next 1-3 business days.

                        </p>

                        <br />

                        <div class="offset-3 col-md-6 text-center">
                            <p>
                                You sent the following message on
                                @DateTime.Now.Date.ToShortDateString() at
                                @DateTime.Now.ToShortDateString() :
                            </p>
                        </div>

                        <br />

                        <div class="offset-3 col-md-6">
                            <p>
                                <em>@Model.Message</em>
                            </p>
                        </div>

                    </div>

                </div>

            </div>

        </div>
</main>